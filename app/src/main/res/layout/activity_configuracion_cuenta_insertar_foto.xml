<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantUsuario.ConfiguracionCuenta.ConfiguracionCuentaInsertarFotoActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar foto"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Botón de ayuda -->
    <TextView
        android:id="@+id/btnAyuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:textSize="14sp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Icono de foto -->
    <ImageView
        android:id="@+id/profilePhotoIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_captura"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón "Browse" -->
    <Button
        android:id="@+id/buttomInsertar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar foto"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorMarineBlue"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/profilePhotoIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Texto de descripción -->
    <TextView
        android:id="@+id/tvDescripionFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imagen máximo de 10MB en formato *.jpg, *.png and *.jpeg"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttomInsertar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>