<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp"
    tools:context=".PantUsuario.Ajustes.AjustesPrivacidadInfoLegalActivity">
         <!-- Título principal -->
        <TextView
            android:id="@+id/tvTituloInformacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Información legal y Administración de privacidad"
            android:textSize="24sp"
            android:textColor="@color/white"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tvTituloInformacion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <!-- Sección Información legal -->
                <TextView
                    android:id="@+id/tvInformacionLegal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Información legal"
                    android:textSize="14sp"
                    android:textColor="@color/colorGris"
                    android:layout_marginBottom="8dp" />

                <!-- Acuerdo de Usuario -->
                <TextView
                    android:id="@+id/tvAcuerdoUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Acuerdo de Usuario"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_button_background"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp" />

                <!-- Política de Privacidad -->
                <TextView
                    android:id="@+id/tvPoliticaPrivacidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Política de Privacidad"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_button_background"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp" />

                <!-- Programa de Experiencia del Usuario -->
                <TextView
                    android:id="@+id/tvProgramaExperiencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Programa de Experiencia del Usuario"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_button_background"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp" />

                <!-- Sección Revocar el consentimiento -->
                <TextView
                    android:id="@+id/tvRevocarConsentimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revocar el consentimiento"
                    android:textSize="14sp"
                    android:textColor="@color/colorGris"
                    android:layout_marginBottom="8dp" />

                <!-- Revocar el consentimiento a la Política de Privacidad -->
                <TextView
                    android:id="@+id/tvRevocarPolitica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Revocar el consentimiento a la Política de Privacidad"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_button_background"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>