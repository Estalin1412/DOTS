<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".PantUsuario.Ajustes.AjustesPaisActivity">
        <!-- Campo de búsqueda -->
        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Buscar"
            android:textColorHint="@color/colorGris"
            android:textColor="@color/white"
            android:padding="12dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" />

        <!-- ScrollView para la lista de países -->
        <ScrollView
            android:id="@+id/countriesScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/searchEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/countriesLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Lista de países de América -->
                <TextView
                    android:id="@+id/countryArgentina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Argentina"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:paddingVertical="12dp" />

                <TextView
                    android:id="@+id/countryBolivia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bolivia"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:paddingVertical="12dp" />

                <TextView
                    android:id="@+id/countryBrazil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brasil"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:paddingVertical="12dp" />

                <TextView
                    android:id="@+id/countryChile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chile"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:paddingVertical="12dp" />

                <TextView
                    android:id="@+id/countryColombia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colombia"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:paddingVertical="12dp" />

                <TextView
                    android:id="@+id/countryEcuador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ecuador"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:paddingVertical="12dp" />

                <TextView
                    android:id="@+id/countryMexico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="México"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:paddingVertical="12dp" />

                <TextView
                    android:id="@+id/countryPeru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perú (actual)"
                    android:textSize="16sp"
                    android:textColor="@color/colorVerde"
                    android:paddingVertical="12dp" />

                <TextView
                    android:id="@+id/countryUruguay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uruguay"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:paddingVertical="12dp" />

                <TextView
                    android:id="@+id/countryVenezuela"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Venezuela"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:paddingVertical="12dp" />
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
