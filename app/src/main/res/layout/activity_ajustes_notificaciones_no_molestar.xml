<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantUsuario.Ajustes.ajusNotificaciones.AjustesNotificacionesNoMolestarActivity"
    android:background="@color/black">

        <!-- TÃ­tulo -->
        <TextView
            android:id="@+id/tvTituloNoMolestar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No molestar"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Switch para activar/desactivar "No molestar" -->
        <LinearLayout
            android:id="@+id/layoutNoMolestarSwitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_button_background"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTituloNoMolestar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvNoMolestar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="No molestar"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <Switch
                android:id="@+id/switchNoMolestar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false" />
        </LinearLayout>

        <!-- Opciones de "Horario de vigencia" y "Dispositivo correspondiente" -->
        <LinearLayout
            android:id="@+id/layoutHorarioVigencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_button_background"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutNoMolestarSwitch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvHorarioVigencia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Horario de vigencia"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvHorarioVigenciaValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00-18:00"
                android:textSize="16sp"
                android:textColor="@color/colorGris" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDispositivoCorrespondiente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_button_background"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutHorarioVigencia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvDispositivoCorrespondiente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dispositivo correspondiente"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/ivDispositivoCorrespondiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_derecha_normal" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>