<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Definir el color de fondo del botón -->
    <solid android:color="@color/colorGrisOscuro" />

    <!-- Definir el radio de las esquinas redondeadas -->
    <corners android:radius="12dp" />

    <!-- Definir un borde alrededor del botón (opcional) -->
    <stroke
        android:width="2dp"
        android:color="@color/colorGris" />

    <!-- Añadir padding interno (opcional) -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
